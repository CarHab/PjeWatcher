<Window x:Class="Watcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Watcher"
        mc:Ignorable="d"
        Title="Watcher" 
        Height="60" Width="450" 
        Topmost="True" 
        WindowStartupLocation="Manual"
        WindowStyle="None"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBox FontSize="14" Grid.Column="0" Grid.Row="0" TextChanged="TextChangedEventHandler" x:Name="InputBox"/>
        <TextBlock Grid.Column="0" Grid.Row="1" x:Name="Output" FontSize="14" Padding="5 0 0 0"/>
    </Grid>
</Window>
