<Window x:Class="Watcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Watcher" 
        Height="30" Width="450" 
        Topmost="True" 
        WindowStartupLocation="Manual"
        WindowStyle="None"
        x:Name="Root"
        ScrollViewer.VerticalScrollBarVisibility="Disabled" 
        ResizeMode="CanMinimize" StateChanged="Root_StateChanged" Loaded="Root_Loaded" MouseDown="Root_MouseDown">
    <Grid>
        <TextBlock VerticalAlignment="Center" x:Name="Output" FontSize="16" Padding="5 0 0 0" Width="450"/>
    </Grid>
</Window>
